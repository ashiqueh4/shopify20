
<div class="custom-collections">
    <div class="custom-collections__card-ctn">
        {% for block in section.blocks %}
            <a class="custom-collections__card" href="{{ block.settings.collection.url }}">
            <div class="custom-collections__card--bg" style="background-image: url({{ block.settings.image_bg|img_url: 'medium' }});"></div>
            <div class="custom-collections__card--hover" style="background-image:url({{ block.settings.image_hover|img_url: 'medium' }})"></div>
            <h3 class="custom-collections__cart-title">{{ block.settings.collection.title| downcase }}</h3>
           
        </a>
        {% endfor %}
    </div>
</div>
<style>
 
.custom-collections__card {
    position: relative;
    border: 3px solid black;
    border-radius: 7px;
    background-color: #E8EFFA;
    margin: 40px auto;
    background-size: cover;
    height: 240px;
    width: 310px;
}

.custom-collections__cart-title {
    font-size: 31px;
    font-weight: 400;
    text-align: center;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    margin:0;
    opacity: 1;
    transition:opacity 0.3s;
}
.custom-collections {
    margin: 80px 0 100px;
}
.custom-collections__card-ctn {
    display: flex; 
    flex-direction: row;
    position: relative;
}
.custom-collections__card:hover > .custom-collections__cart-title,
.custom-collections__card:hover > .custom-collections__card--bg {
    opacity: 0;
    transition: none;
}
.custom-collections__card--bg {
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
    width: 100%;
    height: 100%;
    position: absolute;
    top: 50%;
    left: 50%; 
    border-radius: 4px;
    opacity: 1;
    transform: translate(-50%, -50%);
}

.custom-collections__card--hover {
    background-repeat: no-repeat;
    background-size: 60%;
    background-position: center;
    width: 100%;
    height: 100%;
    position: absolute;
    top: 50%;
    left: 50%; 
    border-radius: 4px;
    opacity: 0;
    transform: translate(-50%, -50%);
    transition:none;
}
.custom-collections__card:hover > .custom-collections__card--hover {
    opacity: 1;
    transition:opacity 0.3s;
}
@media screen and (min-width:768px){
	.custom-collections__card{
	height:200px;
	width:240px;
	}
}

@media screen and (min-width:900px){
.custom-collections__card{
	height:230px;
	width:290px;
	}
}

@media screen and (min-width:1200px){
.custom-collections__card{
	height:270px;
	width:330px;
	}
}
</style>


{% schema %}
{
    "name":"Custom Collection",
    "blocks":[
    {
        "type": "collection",
        "name": "Collection",
        "settings": [
        {
        "type": "collection",
        "id": "collection",
        "label":"Collection"
        },
        {
            "type": "image_picker",
            "id": "image_bg",
            "label":"Image Background"
        }, 
        {
            "type": "image_picker",
            "id": "image_hover",
            "label":"Image Hover"
        }  y
        ]
    }
    ],
    "presets": [
        {
            "name":"Custom Collection"
        }
    ]
}
{% endschema %}